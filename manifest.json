{
    "name": "Summerizer",
    "version": "0.0.1",
    "description": "This is a simple text summerizer",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ],
    "browser_action": {
        "default_title": "Summerize!"
    }
}